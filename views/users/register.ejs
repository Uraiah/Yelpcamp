<% layout('layouts/boilerplate')%>  <!--Tuesday November 29th, 2022 4:50pm-->
<div class="container d-flex justify-content-center align-items-center mt-5"> <!--Container added Monday June 5th, 2023 5:03pm-->
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                alt="" class="card-img-top" />
            <div class="card-body">
             <!--This was moved up from the one on the bottom Wednesday June 7th, 2023 4:30pm-->
             <h1>Register</h1>
             <form action="/register" method="POST" class="validated-form" novalidate>
              <div class="mb-3"><!-- Margin bottom by three-->
                 <label class="form-label" for="username">Username</label>
                 <input class="form-control" type="text" id="username" name="username" required autofocus >
                 <div class="valid-feedback"> <!--Added Tuesday November 29th, 2022 5:09pm-->
                     Looks Good!
                 </div>
             </div>   
             <div class="mb-3"><!-- Margin bottom by three-->
                 <label class="form-label" for="email">Email</label>
                 <input class="form-control" type="email" id="email" name="email" required>
                 <div class="valid-feedback"> <!--Added Tuesday November 29th, 2022 5:14pm-->
                     Looks Good!
                 </div>
             </div>   
             <div class="mb-3"><!-- Margin bottom by three-->
                 <label class="form-label" for="password">Password</label>
                 <input class="form-control" type="password" id="password" name="password" required>
                 <div class="valid-feedback"> <!--Added Tuesday November 29th, 2022 5:15pm-->
                     Looks Good!
                 </div>
             </div>   
             <button class="btn btn-success btn-block">Register</button>
             </form>
            </div>
        </div>
    </div>
</div>
